<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GetPikupActivity">

    <CalendarView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAmountOfBack"
        tools:layout_editor_absoluteX="30dp" />

    <Spinner
        android:id="@+id/spTimePikup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:entries="@array/time_slots"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateView" />

    <TextView
        android:id="@+id/txtGetPikup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Drop your empties"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invAddresOphalen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:text="Pick-up address"
        app:layout_constraintBottom_toTopOf="@+id/invAddresPikup"
        app:layout_constraintStart_toStartOf="@+id/invAddresPikup" />

    <Button
        android:id="@+id/btnPlusBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtAmountOfBack"
        app:layout_constraintTop_toBottomOf="@+id/txtGetPikup" />

    <Button
        android:id="@+id/btnMinBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/txtAmountOfBack"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGetPikup" />

    <TextView
        android:id="@+id/txtAmountOfBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/btnPlusBack"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnMinBack"
        app:layout_constraintTop_toBottomOf="@+id/txtGetPikup" />

    <TextView
        android:id="@+id/txtHowMutchBak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much empties to pick-up?"
        app:layout_constraintBottom_toTopOf="@+id/btnMinBack"
        app:layout_constraintStart_toStartOf="@+id/btnMinBack" />

    <EditText
        android:id="@+id/invAddresPikup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="e.g. Horizonlaan 19"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spTimePikup" />

    <Button
        android:id="@+id/btnGetPikupPK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Come pick by empties"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textUurPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-7dp"
        android:text="Timeslot"
        app:layout_constraintBottom_toTopOf="@+id/spTimePikup"
        app:layout_constraintStart_toStartOf="@+id/spTimePikup" />

    <TextView
        android:id="@+id/textdatePU2"
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/dateView"
        app:layout_constraintTop_toTopOf="@+id/dateView" />

</androidx.constraintlayout.widget.ConstraintLayout>