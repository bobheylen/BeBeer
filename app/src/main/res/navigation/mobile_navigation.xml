<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="be.kuleuven.bebeer.ui.pickup.PickUpFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_pickup" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="be.kuleuven.bebeer.ui.delivery.DeliverFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_deliver" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="be.kuleuven.bebeer.ui.account.AccountFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_account" />
</navigation>